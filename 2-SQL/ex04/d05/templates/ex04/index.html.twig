{# templates/ex04/index.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Delete Items</title>
</head>
<body>

<h1>Users List</h1>

{% if message %}
    <p><strong>{{ message }}</strong></p>
{% endif %}

<table border="1">
<tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
    <th>Action</th>
</tr>

{% for item in items %}
<tr>
    <td>{{ item.id }}</td>
    <td>{{ item.title }}</td>
    <td>{{ item.description }}</td>
    <td>
        <a href="{{ path('ex04_delete', {'id': item.id}) }}" 
           onclick="return confirm('Are you sure you want to delete this item?');">
           Delete
        </a>
    </td>
</tr>
{% endfor %}

</table>

</body>
</html>